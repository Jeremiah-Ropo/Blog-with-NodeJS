<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form method="post" action="/compose">

        <div class="form-group">
            <label for="publishTopic">Title</label>
            <input type="text" class="form-control" id="publishTopic" name="publishTopic" placeholder="Write something today" >
        </div>

        <div class="form-group">
            <label for="publishText">Post</label>
            <textarea class="form-control" id="publishText" name="publishText" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>

<%- include("partials/footer"); -%>